/* 底部工具栏 */
.footer_tool {
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    width: 100%;
    height: 90rpx;
    background-color: #fff;
    border-top: 1rpx solid #cccccc;
}

.footer_tool>.all_chk_wrap {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
}

.footer_tool>.total_price_wrap {
    flex: 4;
    display: flex;
    flex-flow: column nowrap;
    align-items: flex-end;
    padding-right: 15rpx;
}

.total_price_wrap>.total_price>.total_price_text>text {
    color: var(--themeColor);
    font-size: 32rpx;
    font-weight: 600;
}

.footer_tool>.order_pay_wrap {
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 3;
    height: 100%;
    color: #fff;
    font-size: 32rpx;
    font-weight: 600;
    background-color: var(--themeColor);
}

.goods_botton_name {
    height: 100rpx;
    width: 400rpx;
    margin: 50% auto 0 auto;
    color: var(--themeColor);
    font-size: 40rpx;
}