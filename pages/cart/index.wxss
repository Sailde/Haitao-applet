/* pages/cart/index.wxss */
page {
    padding-bottom: 90rpx;
}

.address_btn {
    padding-top: 20rpx;
}

.address_btn button {
    width: 60%;
}

.user_info {
    padding: 20rpx;
    display: flex;
    justify-content: center;

}

.user_info>.user_city {
    padding-left: 10rpx;
    flex: 4;
}

.user_info>.user_phone {
    flex: 1.5;
}

/* 商品信息 */
.cart_title {
    padding: 20rpx;
    font-size: 38rpx;
    border-top: 1px solid var(--themeColor);
    border-bottom: 1px solid var(--themeColor);
}

.cart_item {
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
    border-bottom: 1px solid #cccccc;
}

.cart_chk_wrap {
    flex: 1;
    margin-left: 10rpx;
}

.cart_img_wrap {
    flex: 2;
}

.cart_info_wrap {
    flex: 4;
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
    padding: 20rpx;
}

.cart_info_wrap>.goods_name {
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.cart_info_wrap>.goods_price_wrap {
    margin-top: 30rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
}

.cart_info_wrap>.goods_price_wrap>.goods_price {
    color: var(--themeColor);
    font-size: 30rpx;
    font-weight: 600;
}

.cart_info_wrap>.goods_price_wrap>.cart_num_tool {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
}

/* 添加删除按钮 */
.cart_num_tool>.num_edit {
    width: 50rpx;
    height: 50rpx;
    border: 1px solid #cccccc;
    text-align: center;
}

.cart_num_tool>.goods_num {
    padding: 0 40rpx;
}

